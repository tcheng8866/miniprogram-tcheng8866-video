/* 全局样式 */
/* page最外层 */
.container {
	position: relative;
	width: 100%;
	height: 100%;
	box-sizing: border-box;
	text-align: left;
	vertical-align: middle;
	word-wrap: break-word;
	margin: 0 auto;
	padding: 0 20rpx
}

/* 内间距 */
.content {
	padding: 10rpx 20rpx;
}

/* 内间距- */
.content-width {
	padding: 0 20rpx;
}

/* 居中 */
.center {
	text-align: center;
}

/* flex 布局 */
.around {
	display: flex;
	justify-content: space-around
}

.between {
	display: flex;
	justify-content: space-between
}

.start {
	display: flex;
	justify-content: flex-start
}

.end {
	display: flex;
	justify-content: flex-end
}

/* 截断 */
.ellipsis {
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	width: 700rpx;
}

/* 清除浮动 */
.clearfix::after {
	content: '.';
	display: block;
	height: 0;
	clear: both;
	visibility: hidden;
}

/* 首行缩进 */
.indent {
	text-indent: 34px;
}

/* 靠左定位下的左右居中 */
.transform-x {
	transform: translate(-50%, 0%);
	left: 50%;
	position: relative;
}

.btn {
	margin: 20rpx 0;
	background-color: #D9E9E1;
}
/* 这个必须有、不然点击失效 */
.btn::after {
	content: none
}

/* 分享按钮/其他原生按钮可用 */
.share {
	margin-top: 50rpx;
	width: 200rpx;
	border-radius: 10rpx;
	font-size: 32rpx;
	color: white;
	background-color: #1F2D3D;
}
.share::after {
	content: none
}

/* 常用样式 */
.padding-bottom-50 {
	padding-bottom: 50rpx;
}
